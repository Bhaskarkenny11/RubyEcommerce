<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="stylesheets/product_index.css">
    
</head>
<h2>Listing Products</h2>
<%if user_signed_in? && current_user.is_admin%>
<%= link_to "Add Products", new_product_path %>
<%end%>
<%if @products.empty?%>
<p>NO PRODUCTS FOUND</p>
<% else %>
<ul>
<% @products.each do |product|%>
<li>
<p><%  if product.image_url.attached? %>

  <%= image_tag rails_blob_path(product.image_url,only_path: true)  %>
  <% else %>  
   <p>No image available </p>
  <% end %> </p>
 
 
 <%= link_to product.name, product_path(product.id)%> INR <%= product.price %> --<%= product.category_id%>
<%= link_to 'delete', product_path(product), data: {turbo_method: :delete, turbo_confirm: 'are you sure'} %>
<button type="button" class="btn btn-outline-success"><%=link_to "edit", edit_product_path(product.id)%></button>
</li>
<% end %>
</ul>
<%end%>

<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <!--<link rel="stylesheet" href="https://cdn.simplecss.org/simple-v1.css">-->
    <%= javascript_importmap_tags %>

    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
  </head>
         
  <body>
  <% if  user_signed_in? %>
      welcome <%= current_user.email %> | <br/>
      <%if current_user.is_admin%>
      <%= link_to "DASHBOARD",dashboard_index_path, class:"btn btn-default"%>
      <%end%>

      | <%=link_to "Your Cart #{current_user.cart_line_items.length}",cart_line_items_path,class:"btn btn-default"%> | <%=link_to "Your Orders",orders_path,class:"btn btn-default"%> | <%= link_to "Account Setting",edit_user_registration_path,class:"btn btn-default" %> | <%= link_to "logout",destroy_user_session_path,data: {turbo_method: :delete, turbo_confirm: 'are you sure'},class:"btn btn-default" %><br/>
     <% else %>
     <%= link_to "login",new_user_session_path ,class:"btn btn-default"%> | <%= link_to"Register",new_user_registration_path,class:"btn btn-default" %><br/>
     <%end%>


   <%= link_to "categories", categories_path ,class:"btn btn-default"%> |  <%= link_to "products", products_path,class:"btn btn-default" %>
 
    
 
 
  <%=notice%>
  <%=alert%>

  
    <%= yield %>
  </body>
</html>




















